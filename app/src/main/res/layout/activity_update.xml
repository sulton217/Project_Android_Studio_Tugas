<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update"
    android:background="@drawable/bgnyabro"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="UBAH DATA MAHASISWA"
        android:textColor="#0A90D3"
        android:textColorHint="#0A90D3"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textdb3"
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Isi Database :"
        android:textColor="#0A90D3"
        android:textColorHint="#0A90D3" />

    <Spinner
        android:id="@+id/spinner_search"
        style="@style/warnaspinner"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textdb3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#BD9678"
        android:textColorHint="#BD9678" />

    <Button
        android:id="@+id/bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_fix"
        android:onClick="search"
        android:text="CARI NAMA"
        android:textAlignment="center"
        android:textColor="#000080"
        android:textColorHint="#000080"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_jurusan4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/jurusanfix"
        android:ems="10"
        android:hint="Jurusan"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#0A90D3"
        android:textColorHint="#0A90D3" />

    <EditText
        android:id="@+id/edit_user4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nama"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_jurusan4"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/username3"
        android:textColor="#0A90D3"
        android:textColorHint="#0A90D3"
        />

    <EditText
        android:id="@+id/edit_pass4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Nomor HP"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_user4"
        android:layout_marginTop="10dp"


        android:drawableLeft="@drawable/password3"
        android:textColor="#0A90D3"
        android:textColorHint="#0A90D3"
        />

    <Button
        android:id="@+id/bt_update2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_pass4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_btn_fix"
        android:onClick="update"
        android:text="ubah"
        android:textAlignment="center"
        android:textColor="#000080"
        android:textColorHint="#000080"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_logout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_pass4"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_fix"
        android:onClick="logout"
        android:text="kembali"
        android:textAlignment="center"
        android:textColor="#000080"
        android:textColorHint="#000080"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>